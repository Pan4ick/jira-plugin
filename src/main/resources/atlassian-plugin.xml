<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="jira-custom-field"/>

    <!-- add our web resources -->
    <web-resource key="jira-custom-field-resources" name="jira-custom-field Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="images/" location="/images"/>
        <context>jira-custom-field</context>
    </web-resource>

    <customfield-type name="Multiple Values" i18n-name-key="jira-custom-field.name" key="multiple" class="com.plugins.customfield.MultipleValuesCFType">
        <resource type="velocity" name="view" location="templates/customfield/view.vm"/>
        <resource type="velocity" name="edit" location="templates/customfield/edit.vm"/>
        <resource type="velocity" name="xml" location="templates/customfield/xml.vm"/>
    </customfield-type>

    <customfield-type name="Account" i18n-name-key="jira-cf-account.name" key="account" class="com.plugins.accountCF.MultipleValuesCFType">
        <resource type="velocity" name="view" location="templates/accountCF/view.vm"/>
        <resource type="velocity" name="edit" location="templates/accountCF/edit.vm"/>
        <resource type="velocity" name="xml" location="templates/accountCF/xml.vm"/>
    </customfield-type>

    <web-resource key="jira-accountCF-resources" name="jira-account Web Resources">
        <resource type="download" name="jira-custom-field.js" location="/js/accountCF/jira-custom-field.js"/>
        <resource type="download" name="jira-custom-field.css" location="/css/jira-custom-field.css"/>
        <context>atl.general</context>
    </web-resource>

    <web-resource key="jira-datepicker-resources" name="jira-datepicker Web Resources">
        <resource type="download" name="datepicker.min.js" location="templates/datepicker/js/datepicker.min.js"/>
        <resource type="download" name="datepicker.min.css" location="templates/datepicker/css/datepicker.min.css"/>
        <resource type="download" name="datepicker.en.js" location="templates/datepicker/i18n/datepicker.en.js"/>
        <context>atl.general</context>
    </web-resource>

</atlassian-plugin>
<div class="aui-group">
    <div class="aui-item">
        <div class="zoned">
            <a href="$baseURL/browse/$agreement.getKey()">$agreement.getKey()</a> $agreement.getSummary()

            <div class="aui-group">
                <div class="aui-item">
                    <span data-tooltip="$agreement.getOrganisation().getStatus()" class="aui-lozenge jira-issue-status-lozenge-compact aui-lozenge-$agreement.getOrganisation().getStatusColor()">$agreement.getOrganisation().getStatus()</span> Организация: <a href="$baseURL/browse/$agreement.getOrganisation().getKey()">$agreement.getOrganisation().getKey()</a> $agreement.getOrganisation().getSummary()
                </div>
            </div>
            <div class="aui-group aui-group-split">
                <div class="aui-item">
                    $soyRenderer.render(
                        'jira.webresources:issue-statuses',
                        'JIRA.Template.Util.Issue.Status.issueStatusResolver', {
                        'issueStatus': $agreement.getStatus(),
                        'isSubtle': true,
                        'isCompact': false,
                        'maxWidth': 150
                    })
                </div>
                <div class="aui-item">
                    Стоимость: #set($amount = $agreement.getAmount())
                    #if($amount)
                        $number.format($amount)
                    #end
                </div>
            </div>
            #foreach($specification in $agreement.getSpecificationsList())
                #parse( "templates/statusscreen/specification.vm")
            #end
            #foreach($invoice in $agreement.getInputInvoicesList())
                #parse( "templates/statusscreen/invoice.vm")
            #end
        </div>

    </div>

</div>
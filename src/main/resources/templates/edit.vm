                       value="" />
            </td>
            <td>
                <input id="${field_uid}-days-advance"
                       name="${field_uid}"
                       type="text"
                       value="" />
            </td>

        </tr>

        <tr width="15%">
            <td>
                Готовность
            </td>
            <td>
                <input id="${field_uid}-willingness"
                       name="${field_uid}"
                       type="text"
                       value="" />
            </td>
            <td>
                <input id="${field_uid}-days-willingness"
                       name="${field_uid}"
                       type="text"
                       value="" />
            </td>
        </tr>
    <tr width="15%">
        <td>
            Постоплата
        </td>
        <td>
            <input id="${field_uid}-postpaid"
                   name="${field_uid}"
                   type="text"
                   value="" />
        </td>
        <td>
            <input id="${field_uid}-days-postpaid"
                   name="${field_uid}"
                   type="text"
                   value="" />
        </td>
#end
</table>
